{% extends 'base.html.twig' %}

{% block title %}Atom List{% endblock %}


{% block body %}
    <h1>List Atom</h1>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">name</th>
            <th scope="col">symbol</th>
            <th scope="col">level</th>
            <th scope="col">level</th>
            <th scope="col">edit</th>
            <th scope="col">delete</th>
        </tr>
        </thead>
        <tbody>
        {% for atom in atoms %}
            <tr>
                <td>{{ atom.name }}</td>
                <td>{{ atom.symbol }}</td>
                <td>
                    <a href="{{ path('jonization_level_list', {'id': atom.id}) }}">
                        List
                    </a>
                </td>
                <td>
                    <a href="{{ path('jonization_level_add', {'id': atom.id}) }}">
                        Add
                    </a>
                </td>
                <td>
                    <a href="{{ path('atom_edit', {'id': atom.id}) }}">
                    Edit
                    </a>
                </td>
                <td><a href="{{ path('atom_delete', {'id': atom.id}) }}">
                    Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
